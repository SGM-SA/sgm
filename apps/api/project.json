{
	"name": "api",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"sourceRoot": "apps/api/api",
	"targets": {
		"lock": {
			"executor": "@nxlv/python:run-commands",
			"options": {
				"command": "poetry lock --no-update",
				"cwd": "apps/api"
			}
		},
		"add": {
			"executor": "@nxlv/python:add",
			"options": {}
		},
		"update": {
			"executor": "@nxlv/python:update",
			"options": {}
		},
		"remove": {
			"executor": "@nxlv/python:remove",
			"options": {}
		},
		"build": {
			"executor": "@nxlv/python:build",
			"outputs": ["{projectRoot}/dist"],
			"options": {
				"outputPath": "apps/api/dist",
				"publish": false,
				"lockedVersions": true,
				"bundleLocalDependencies": true
			}
		},
		"install": {
			"executor": "@nxlv/python:install",
			"options": {
				"silent": false,
				"args": "",
				"cacheDir": ".cache/pypoetry",
				"verbose": false,
				"debug": false
			}
		},
		"lint": {
			"executor": "@nxlv/python:flake8",
			"outputs": ["{workspaceRoot}/reports/apps/api/pylint.txt"],
			"options": {
				"outputFile": "reports/apps/api/pylint.txt"
			}
		},
		"test": {
			"executor": "@nxlv/python:run-commands",
			"outputs": [
				"{workspaceRoot}/reports/apps/api/unittests",
				"{workspaceRoot}/coverage/apps/api"
			],
			"options": {
				"command": "poetry run pytest tests/",
				"cwd": "apps/api"
			}
		},
		"start": {
			"executor": "@nxlv/python:run-commands",
			"options": {
				"command": "poetry run ./manage.py runserver",
				"cwd": "apps/api"
			}
		},
		"dev": {
			"executor": "@nxlv/python:run-commands",
			"options": {
				"command": "poetry run ./manage.py devserver",
				"cwd": "apps/api"
			}
		},
		"generate:spec": {
			"executor": "@nxlv/python:run-commands",
			"options": {
				"command": "poetry run ./manage.py spectacular --file ../../libs/openapi/src/spec.yml",
				"cwd": "apps/api"
			}
		},
		"migrate": {
			"executor": "@nxlv/python:run-commands",
			"options": {
				"command": "poetry run ./manage.py migrate",
				"cwd": "apps/api"
			}
		}
	},
	"tags": []
}
